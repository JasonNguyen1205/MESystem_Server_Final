@inherits ComponentBase

<audio id="player">
    <source id="playerSource" src="" />
</audio>

@if (Contents is not null && CssTextColor is not null && Contents.Count == CssTextColor.Count)
{   
    <div class="demo-text w-100 mt-0 text-muted d-block">
        @for (int i = 0; i < Contents.Count; i++)
        {
             <div style='color: @CssTextColor[i]'>&bull;&nbsp;<b>@Result[i]:</b>&nbsp;@Contents[i]&nbsp;<b>@HighlightMsg[i]</b></div>
        } 
     </div>
   } 



@code {
    [Parameter]
    public List<string>? Result { get; set; }

    [Parameter]
    public List<string>? Contents { get; set; }

    [Parameter]
    public List<string>? HighlightMsg { get; set; }

    [Parameter]
    public List<string>? CssTextColor { get; set; }

    protected override bool ShouldRender()
    {
        return true;
    }

    protected override Task OnParametersSetAsync()
    {
        return InvokeAsync(StateHasChanged);
    }
}
